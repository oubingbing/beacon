<view class='container'>
  <view class='container-content'>


    <view class='content'>
      <view class='my-label'>我的笔记簿</view>
      <scroll-view class='my-note' scroll-y>
        <view class='note-container'>

          <view class='note' bindtap='triggerNoteList' data-id='{{item.id}}' wx:for="{{myList}}" wx:key="{{myList.id}}">
            <image src='/image/dir.png'></image>
            <view class='title'>{{item.name}}</view>
          </view>

        </view>
      </scroll-view>
    </view>

    <view class='alert-container' wx:if="{{showNoteList}}">
      <scroll-view scroll-y class='alert-content'>
          <image class='close-icon' src='/image/close.png' bindtap='triggerNoteList'></image>

          <view class='file-item' wx:for="{{notes}}" wx:key="{{notes}}" data-id='{{item.id}}' bindtap='openDetail'>
            <view class='image-container'>
              <image src='/image/markdown.png'></image>
            </view>
            <view class='file-title'>
              <view class='title'>{{item.title}}</view>
              <view class='time'>{{item.created_at}}</view>
            </view>
          </view>

      </scroll-view>
    </view>

  </view>
</view>