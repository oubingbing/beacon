page{
  background-color:#F5F5F5;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .container-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container-content .content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content .my-note{
  width: 90%;
  height: 650rpx;
  display: flex;
  flex-direction: column;
  border-style:solid;
  border-width:1rpx;
  border-color: #66CDAA;
  margin-top: 50rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 30rpx;
  border-radius: 20rpx;
  background: white;
}

.my-label{
  font-size: 35rpx;
  z-index: 100;
  position: absolute;
  top: 27rpx;
  left: 50rpx;
  background: #F5F5F5;
  padding-right: 15rpx;
  padding-left: 15rpx;
  border-radius: 10rpx;
}

.my-note .note-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.note-container .note{
  width: 33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 13rpx;
}

.note image{
  width: 150rpx;
  height: 150rpx;
}

.note .title{
  font-size: 28rpx;
  width: 100%;
  color: gray;
   overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: center;
}

.alert-container{
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
   background:rgba(2,2,2,0.8);
}

.alert-container .alert-content{
  width: 90%;
  height: 90%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.alert-content .close-icon{
  width: 70rpx;
  height: 70rpx;
  z-index: 110;
  position: fixed;
  top: 56rpx;
  right: 39rpx;
  border-top-right-radius: 20rpx;
}

.alert-content .file-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: gainsboro;
}

.file-item image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}

.file-title .title{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.file-item .file-title{
  font-size: 30rpx;
}

.file-title .time{
  font-size: 25rpx;
  color: gray;
}