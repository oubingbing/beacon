
<view wx:if="{{show_auth}}" class='auth-container'>
  <view class='auth-wall'>
    <view class='auth-tips'>
      <image src='/image/wechat-logo.png'></image>
      <view>授权您的公开信息(昵称和头像)</view>
    </view>
    <button open-type="getUserInfo" 
            bindgetuserinfo="getAuthUserInfo" 
            class='auth-button'>
      <view>授权登录</view>
    </button>
  </view>
</view>

<view class='container'>
  <view class='content' wx:for="{{list}}" wx:key="{{list}}">
    <view class='content-item'>
    
      <view class='header'>
        <view class='user-info'>
          <image src='https://wx.qlogo.cn/mmopen/vi_32/Q0j4TwGTfTKiauVH65XNEZic7VD1uUKicE9v3V4zX04sptkOrLibqChmcouZrW8NHNYARfHYQYVwLicRQmfU0FoLIwQ/132'></image>
            <view class='user'>
              <view class='nickname'>叶子</view>
              <view class='time'>2018-10-1 12:21:11</view>
            </view>
          </view>
          <view class='operation'>
            <view class='follow'>关注</view>
          </view>
        </view>

        <view class='content-wall'>
          <view class='title'>
            <view class='title-content'>我是如何成长为一名野路子出身的程序员的... </view><view class='detail'>全文</view>
          </view>
          <view class='attachments'>
            <view class="attachments-single-image" >
                <image mode="aspectFill" 
                      class="image-item" 
                      wx:for-item="sub"
                      wx:for="{{item.cover_image}}" 
                      wx:key="{{item.cover_image}}"
                      src="{{sub}}"
                      id="{{sub}}"></image>
              </view>
              <view class='attachments-more-image' 
                    wx:if='{{item.cover_image.length>1}}'>
                <image mode="aspectFill" 
                      class="image-item" 
                      wx:for-item="sub"
                      wx:for="{{item.cover_image}}" 
                      wx:key="{{item.cover_image}}"
                      src="{{sub}}" 
                      id="{{sub}}"></image>
              </view>
          </view>
        </view>

      </view>
  </view>
</view>

  <view class='get-more' wx:if="{{showGeMoreLoadin}}">
    <view class='get-more-item'>
      <image src='/image/get-more.gif' mode='aspectFit'></image>
      <view class='loading'>加载中</view>
    </view>
  </view>

  <view class='no-more-data' wx-if="{{notDataTips && list.length != 0}}">
    <view>别扯了，到底啦~_~</view>
  </view>




