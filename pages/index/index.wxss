page{
  background-color:#F5F5F5;
  display: flex;
  flex-direction: column;
}

.body{
  width: 100%;
  display: flex;
}

.body .body-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.body-content .content{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  margin-bottom: 20rpx;
  align-items: center;
}

.body-content .content-item{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.content-item .left-right{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 220rpx;
}

.content-item .up-down{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.up-down .body{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.body .header{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.left .title{
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
}

.header .title{
  width: 100%;

  padding-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
}

.body image{
  height: 150rpx;
  width: 210rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
}

.up-down .footer{
  display: flex;
  flex-direction: row;
  color: gray;
  font-size: 25rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.left-right .left{
  width: 68%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.left-right .right{
    width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.right image{
  width: 100%;
  height: 200rpx;
}

.left-right .footer{
  width: 100%;
  display: flex;
  flex-direction: row;
  color: gray;
  font-size: 25rpx;
}

.footer .nickname{
  margin-right: 20rpx;
}

.footer .time{
  margin-right: 20rpx;
}



/** 授权按钮 **/
.auth-container{
  position: fixed;
  z-index: 300;
  width: 100%;
  height: 100%;
  background: gray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background:rgba(2,2,2,0.6);
}

.auth-container .auth-wall{
  background: white;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}

.auth-wall .auth-tips{
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: gray;
  font-size: 30rpx;
}

.auth-tips image{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

.auth-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #43CD80;
  width: 100%;
  color: white;
  font-size: 35rpx;
  border-radius: 0rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.auth-button .auth-image-container{
  display: flex;
  flex-direction: column;
}

.auth-button image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.power_by{
  color: #D3D3D3;
}


/** 加载更多 **/

.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}

.no-more-data{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  font-weight: 200;
  text-align: center;
  color: darkgray;
}

.message-tip{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100rpx;
  align-items: center;
  background: white;
  margin-top: 75rpx;
  margin-bottom: -72rpx;
}

.message-tip .tip-content{
  padding: 20rpx;
  background: #575757;
  color: white;
  border-radius: 10rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}

.tip-content image{
  width: 35rpx;
  height: 35rpx;
}

