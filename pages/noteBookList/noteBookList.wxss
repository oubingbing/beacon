page{
  background-color:#F5F5F5;
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.body{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.body .content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content .header-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.header-container .title{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}


.title .title-content{
  width: 80%;
}

.title .notebook-collect{
  width: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.notebook-collect image{
  width: 40rpx;
  height: 40rpx;
}

.header-container .user-container{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header-container .user-info{
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 30rpx;
  padding-top: 15rpx;
}

.header-container .follow{
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;

}

.header-container .follow-button{
  background: #EE4000;
  color: white;
  font-size:25rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-radius: 10rpx; 
}

.header-container .follow-label{
  font-size:25rpx;
  border-style:solid;
  border-width:1rpx;
  border-color: darkgray;
  border-radius: 10rpx;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.user-info .avatar{
  width:20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.user-info image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.user-info .nickname{
  width: 80%;
}

.nickname .name{
  font-size: 30rpx;
}

.nickname .time{
  font-size: 25rpx;
  color: darkgray;
}

/** 笔记布局 **/

.content-body{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  margin-top: 10rpx;
}

.content-item{
  width: 90%;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  margin-bottom: 10rpx;
}

.content-item .left-right{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 220rpx;
}

.content-item .none-image{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 120rpx;
}

.none-image .main{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.none-image .footer{
  margin-top: 15rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  color: gray;
  font-size: 25rpx;
}

.content-item .up-down{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.up-down .body{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.body .header{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.left .title{
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
}

.header .title{
  width: 100%;

  padding-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
}

.content-item image{
  height: 150rpx;
  width: 210rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
}

.up-down .footer{
  display: flex;
  flex-direction: row;
  color: gray;
  font-size: 25rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.left-right .left{
  width: 68%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.left-right .right{
    width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.right image{
  width: 100%;
  height: 200rpx;
}

.left-right .footer{
  width: 100%;
  display: flex;
  flex-direction: row;
  color: gray;
  font-size: 25rpx;
}

.footer .nickname{
  margin-right: 20rpx;
}

.footer .time{
  margin-right: 20rpx;
}