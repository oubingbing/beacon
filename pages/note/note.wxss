page{
  background-color:#F5F5F5;
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.content .content-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  margin-bottom: 15rpx;
  padding-bottom: 30rpx;
}

.content .header{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
  justify-content: center;
  align-items: center;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F5F5F5;
}

.header .header-content{
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header .user-info{
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user-info .user{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
}

.user .time{
  font-size: 30rpx;
  color: darkgray;
}

.user-info image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.header .operation{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
}

.operation .follow{
  font-size: 30rpx;
  background: #EE0000;
  color: white;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 10rpx;
}

.content-item .note-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.note-content .note{
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.note .note-item{
  width: 95%;
  display: flex;
  flex-direction: row;
  padding-bottom: 10rpx;
  background: white;
  padding: 10rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F5F5F5;
}

.note-item .left{
  width: 80%;
  display: flex;
  flex-direction: column;
}

.left .title{
  font-size: 35rpx;
}

.left .time{
  font-size: 30rpx;
  color: darkgray;
}